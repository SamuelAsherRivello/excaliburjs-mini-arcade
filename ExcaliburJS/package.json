{
  "type": "module",
  "main": "index.ts",
  "version": "0.0.1",
  "name": "excalibur-js-project-template",
  "description": "Excalibur TypeScript template for Vite",
  "homepage": "https://github.com/SamuelAsherRivello/excaliburjs-project-template",
  "scripts": {
    "CLIENT  ----------------------------------------------------": "",
    "client-preview": "vite preview",
    "client-start": "vite",
    "client-start-watch": "vite --host",
    "client-build": "tsc && vite build && npm run documentation-build",
    "TESTS  -----------------------------------------------------": "",
    "tests-start": "vitest run",
    "tests-start-watch": "vitest",
    "tests-start-ui": "vitest --ui",
    "tests-start-coverage": "vitest run --coverage",
    "GITHUB PAGES  ----------------------------------------------": "",
    "publish-start": "npm run client-build",
    "publish-build": "gh-pages -d dist",
    "DOCUMENTATION  ---------------------------------------------": "",
    "documentation-build": "typedoc --options typedoc.json",
    "MISC  ------------------------------------------------------": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,tsx}\""
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "excalibur": "^0.29.3",
    "gh-pages": "^6.1.1",
    "globals": "^13.24.0",
    "jsdom": "^24.1.1",
    "prettier": "^3.3.3",
    "typedoc": "^0.26.5",
    "typescript": "^5.3.3",
    "undici": "^6.19.5",
    "vite": "^5.0.12",
    "vitest": "^2.0.5"
  },
  "keywords": [
    "vite",
    "game",
    "html5",
    "game-dev",
    "excalibur",
    "typescript",
    "excaliburjs",
    "game-engine"
  ]
}
